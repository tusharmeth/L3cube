import sys


class TXTFS1:
	def __init__(self):
		if(len(sys.argv)==1):
			print "textfs keeps your files safe from ramesh."
			print "Options Available : "
			print "1)textfs FILENAME create"
			print "2)textfs ls" 
			exit(0)
		elif(len(sys.argv)==2):
				if(sys.argv[1]=="ls"):
					print "HI"					
					#self.display()
				else:
					self.create()
	def create(self):
			print "creating"
			file1=open(sys.argv[1],"r")	
			fileTemp=""			
			try:
				fileTemp=open("temp","r")
			except:
				fileTemp=open("temp","w")	
				fileTemp.close()
				fileTemp=open("temp","r")
			newData=file1.readlines()			
			count=0
			fileTemp.close()
			fileTemp=open("temp","a")
			temptemp=" "
			for i in range(len(newData)):
				temptemp+=newData[i].rstrip('\n')
				temptemp+=" "
			temptemp+="\n"
			oldData=fileTemp.readlines()
			if(len(oldData)>=2):
				
				print oldData[-2]		
			
			print temptemp
			if(len(oldData)>=2):
				if(oldData[-2]==temptemp):
					print "already commited!!!"		
					exit(0)
			else:
				fileTemp.write(" ")		
			for i in range(len(newData)):
					newData[i]=newData[i][0:-1]
			newData.append("\n")
			#totLines=20
			#if(len(newData)<20):
			totLines=len(newData)
			for i in range(totLines):
					#print newData[i]
					fileTemp.write(newData[i]+" ")
			file1.close()		
			fileTemp.close()
				
